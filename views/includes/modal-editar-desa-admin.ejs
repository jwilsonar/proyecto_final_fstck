<!-- views/includes/modal-editar-cat-admin.ejs -->
<div id="edit-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-lg w-full">
        <h2 class="text-xl font-bold mb-4">Editar Desarrollador</h2>
        <form action="editar-desarrollador" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_id" id="edit-id">
            <div class="mb-4">
                <label for="edit-nombre" class="block text-sm font-medium">Nombre</label>
                <input type="text" id="edit-nombre" name="nombre" class="border border-gray-300 rounded-md w-full p-2">
            </div>
            <div class="mb-4">
                <label for="edit-imagen" class="block text-sm font-medium">Imagen</label>
                <input type="file" id="imagen" name="imagen">
            </div>
            
            <div class="mb-4">
                <label for="edit-descripcion" class="block text-sm font-medium">Descripción</label>
                <textarea id="edit-descripcion" name="descripcion" class="border border-gray-300 rounded-md w-full p-2"></textarea>
            </div>

            <!-- País -->
            <div>
                <label for="edit-pais" class="block text-sm font-medium text-gray-700">País</label>
                <select 
                    id="edit-pais" 
                    name="pais" 
                    required 
                    class="mt-1 p-2 border border-gray-300 rounded w-full"
                >
                    <!-- Opciones dinámicas -->
                    <% paises.forEach(paisMod => { %>
                        <option value="<%= paisMod %>"><%= paisMod %></option>
                    <% }); %>
                </select>
            </div>
            

            <!-- Fecha de Fundación -->
            <div>
                <label for="edit-fechaFundacion" class="block text-sm font-medium text-gray-700">Fecha de Fundación</label>
                <input 
                    type="date" 
                    id="edit-fechaFundacion" 
                    name="fechaFundacion" 
                    class="mt-1 p-2 border border-gray-300 rounded w-full"
                >
            </div>

            <div class="flex justify-end gap-4">
                <button 
                    type="button" 
                    onclick="closeEditModal()"
                    class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition"
                >
                    Cancelar
                </button>
                <button 
                    type="submit" 
                    class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition"
                >
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
