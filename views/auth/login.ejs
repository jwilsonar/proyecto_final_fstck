<%- include('../includes/head.ejs') %>
</head>

<body class="bg-gray-200 min-h-screen flex flex-col">
    <%- include('../includes/navigation.ejs') %>
    <main class=" flex-1 flex items-center justify-center">
        <div class="w-full max-w-sm p-8 bg-white rounded-lg shadow-md">
            <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">Formulario de Login</h1>
            <% if(mensaje) {%>
                <div class="error border border-red-500 text-red-700 font-semibold p-4 rounded-lg bg-red-100 mb-5">
                    <%= mensaje %>
                </div>                               
            <%}%>
            <form class="space-y-6" action="/login" method="POST" novalidate>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Correo electrónico</label>
                    <input id="email" name="email" type="email" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none <%= (erroresValidacion.find(e => e.path === 'email')) ? 'border-red-500' : 'border-gray-300' %>" placeholder="Ingresa tu correo" required value="<%= datosAnteriores.email %>"">
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                    <input id="password" name="password" type="password" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:border-blue-500 focus:outline-none <%= (erroresValidacion.find(e => e.path === 'password')) ? 'border-red-500' : 'border-gray-300' %>" placeholder="Ingresa tu contraseña" required value="<%= datosAnteriores.password || '' %>">

                </div>

                <button type="submit" class="w-full py-2 bg-blue-600 text-white rounded-md font-semibold hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">Iniciar Sesión</button>
            </form>

            <p class="text-center text-gray-600 text-sm mt-6">¿No tienes una cuenta? <a href="/registro" class="text-blue-600 font-semibold hover:underline">Regístrate</a></p>
        </div>
    </main>
    <%- include('../includes/footer.ejs') %>
<%- include('../includes/end.ejs') %>